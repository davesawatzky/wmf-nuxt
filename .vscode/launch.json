{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "server: nuxt",
      "program": "${workspaceFolder}/node_modules/nuxi/bin/nuxi.mjs",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "outputCapture": "std",
      "args": ["dev"],
      "outFiles": ["${workspaceFolder}/out/**/*.js"]
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch on Chrome",
      "port": 3001,
      "url": "http://localhost:3001",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "firefox",
      "request": "launch",
      "name": "Launch on Firefox",
      // "firefoxExecutable": "/mnt/c/'Program Files'/'Firefox Developer Edition'/firefox.exe",
      "port": 3001,
      "url": "http://localhost:3001",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach to Chrome",
      "port": 3001,
      "url": "http://localhost:3001",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "firefox",
      "request": "attach",
      "name": "Attach to Firefox",
      "port": 3001,
      "firefoxExecutable": "/mnt/c/'Program Files'/'Firefox Developer Edition'/firefox.exe",
      "url": "http://localhost:3001",
      "webRoot": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "Fullstack on Chrome",
      "configurations": ["server: nuxt", "Launch on Chrome"]
    },
    {
      "name": "Fullstack on Firefox",
      "configurations": ["server: nuxt", "Launch on Firefox"]
    }
  ]
}
